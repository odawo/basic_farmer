<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.envy13.login.JielimisheActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a crop to know more."
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:padding="20dp"/>

    <Button
        android:id="@+id/tomatoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="tomatoes"
        android:padding="20dp"
        android:background="#00a2ad"/>

    <Button
        android:id="@+id/onions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tomatoes"
        android:text="onions"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:background="#00a2ad"/>

    <Button
        android:id="@+id/potatoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/onions"
        android:text="potatoes"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:background="#00a2ad"/>

    <Button
        android:id="@+id/carrots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/potatoes"
        android:text="carrots"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:background="#00a2ad"/>


</RelativeLayout>
